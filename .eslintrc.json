{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["standard-with-typescript", "plugin:astro/recommended"],
    "overrides": [
        {
            "env": {
                "node": true
            },
            "files": [
                ".eslintrc.{js,cjs}"
            ],
            "parserOptions": {
                "sourceType": "script"
            }
        }, {
            "files":["*.astro"],
            "parser": "astro-eslint-parser",
            "processor": "astro/client-side-ts",
            "parserOptions": {
                "parser": "@typescript-eslint/parser",
                "extraFileExtensions": [".astro"]
            },
            "rules": {
                "no-tabs": "error"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-tabs": "error"
    }
}
