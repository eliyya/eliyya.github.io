---
import Folder from './Folder.svelte'

interface File {
  name: string
  path: string
}

interface Dir {
  name: string
  children: Array<File | Dir>
}
const fileTree: Array<File | Dir> = [
  {
    name: 'public',
    children: [
      {
        name: 'favicon.svg',
        path: '/favicon'
      }
    ]
  },
  {
    name: 'src',
    children: [
      {
        name: 'components',
        children: [
          {
            name: 'Card.astro',
            path: '/components/Card.astro'
          }
        ]
      }
    ]
  },
  {
    name: 'README.md',
    path: '/README.md'
  }
];
---

<aside>
  <header>Explorer</header>
  <Folder client:load name="portfolio" children={fileTree} />
</aside>

<style>
  aside {
    background-color: #181818;
    color: white;
    width: 170px;
    font-size: 13px;
    display: flex;
    flex-direction: column;
    border-right: 1px solid #333;
    min-width: fit-content;

    > header {
      font-size: 13px;
      padding: 10px 8px;
      height: 35px;
      text-transform: uppercase;

      > aside > nav {
        flex-grow: 1;
      }
    }
  }
</style>
